<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${project.build.directory}/jersey-resources</directory>
            <includes>
                <include>**/*.*</include>
                <include>**/**</include>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/*.py</exclude>
                <exclude>**/*.pl</exclude>
                <exclude>**/*.rb</exclude>
                <exclude>**/*.jks</exclude>
            </excludes>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <outputDirectory>/service</outputDirectory>
            <destName>book-store-service.war</destName>
            <source>${project.build.directory}/wars/book-store-service.war</source>
        </file>
    </files>
</assembly>
